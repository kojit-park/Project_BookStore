<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
 <configuration>
 
 	<settings>
 		<setting name= "mapUnderscoreToCamelCase" value="true"/>
 	</settings>
	
 	<typeAliases>
 		<typeAlias type="bookstore.model.BookStore" alias="MyBS"/>
 		<typeAlias type="minigame.model.MiniGame" alias="MyMG"/>
 		<typeAlias type="bmember.model.BmemberBean" alias="MyBmember"/>
 		<typeAlias type="order.model.Order" alias="MyOrder"/>
		<typeAlias type="bsmall.cart.ShoppingInfo" alias="MyComposite"/>
		<typeAlias type="gift.model.Gift" alias="MyGift"/>
 	</typeAliases>
 
	<mappers>
		<mapper resource="mybatis/bookstore.xml"></mapper>
		<mapper resource="mybatis/minigame.xml"></mapper>
		<mapper resource="mybatis/bmember.xml"></mapper>
		<mapper resource="mybatis/order.xml"/>
		<mapper resource="mybatis/composite.xml"/>
		<mapper resource="mybatis/gift.xml"/>
	</mappers>

</configuration>
 
