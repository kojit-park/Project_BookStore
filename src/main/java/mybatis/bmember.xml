<!-- 회원정보 DB 입력 -->


<insert parameterType="Mybmember" id="InsertBmember">

insert into bmember(num,name,birth,pn1,pn2,pn3,email1,email2,gender,genre,pw,id)
values(bmem_seq.nextval,#{name},#{birth},#{pn1},#{pn2},#{pn3},#{email1},#{email2},#{gender},#{genre},#{pw},#{id}) 

</insert>

<select id="Login" resultType="MyBmember">
select * from bmember 
where id = #{id} and pw = #{pw}
</select>

<select id="findid" resultType="MyBmember">
select * from bmember 
where name = #{name}, email1 = #{email1}, email2 = #{email2} 
</select>

<select id="findpw" resultType="MyBmember">
select * from bmember 
where name = #{name}, id = #{id}, email1 = #{email1}, email2 = #{email2} 
</select>

<select id="GetInfo" resultType="MyBmember">
	select * from bmember where id=#{id}
</select>

</mapper>